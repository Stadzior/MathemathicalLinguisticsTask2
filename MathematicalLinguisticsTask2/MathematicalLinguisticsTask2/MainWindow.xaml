<Window
    x:Class="MathematicalLinguisticsTask2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MathematicalLinguisticsTask3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="647"
    Height="214.677"
    DataContext="{StaticResource Automat}"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Grid Margin="0,0,2,0">
        <Button
            x:Name="btnStep"
            Width="123"
            Height="58"
            Margin="367,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnStep_Click"
            Content="Step"
            FontSize="24" />
        <Button
            x:Name="btnLoadFile"
            Width="123"
            Height="58"
            Margin="239,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnLoadFile_Click"
            Content="Load file"
            FontSize="18" />
        <Button
            x:Name="btnStartStop"
            Width="132"
            Height="58"
            Margin="495,113,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnStartStop_Click"
            Content="Start"
            FontSize="24" />
        <TextBox
            x:Name="txtState"
            Width="70"
            Height="68"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="24"
            RenderTransformOrigin="0.92,0.84"
            Text="{Binding CurrentState.Name}"
            TextWrapping="Wrap" />
        <Canvas>
            <ListView
                Canvas.Left="100"
                Canvas.Top="10"
                Width="100"
                Height="64">
                <ListView.View>
                    <GridView>
                        <GridViewColumn />
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView
                Canvas.Left="10"
                Canvas.Top="92"
                Width="190"
                Height="84">
                <ListView.View>
                    <GridView>
                        <GridViewColumn />
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBox
                x:Name="txtState_Copy"
                Canvas.Left="235"
                Canvas.Top="10"
                Width="367"
                Height="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="24"
                RenderTransformOrigin="0.92,0.84"
                Text="{Binding CurrentState.Name}"
                TextWrapping="Wrap" />
        </Canvas>
    </Grid>
</Window>
